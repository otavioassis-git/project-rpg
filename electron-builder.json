{
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "otavioassis-git",
      "repo": "rpg-soundboard"
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": true,
    "createDesktopShortcut": true,
    "menuCategory": "Project RPG",
    "shortcutName": "Project RPG",
    "perMachine": false,
    "runAfterFinish": true
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
